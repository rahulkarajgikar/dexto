{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "vitest/globals"],
        "lib": ["ES2022", "DOM"]
    },
    "include": ["src/**/*", "**/*.test.ts", "**/*.spec.ts", "vitest.config.ts"],
    "exclude": ["node_modules"]
}
