{
  "name": "@saiki/monorepo",
  "version": "0.2.0",
  "description": "Saiki - Your command center for controlling computers and services with natural language - connect once, command everything",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "pnpm -r --parallel clean",
    "prebuild": "",
    "build": "tsc -b",
    "build:clean": "pnpm run clean && pnpm run build",
    "start": "node packages/saiki/dist/main.js",
    "prepare": "husky install",
    "copy-client": "npx rimraf public && mkdir public && npx copyfiles -f \"packages/saiki/web/client/*\" public",
    "dev": "tsc --watch",
    "lint": "pnpm -r --parallel lint",
    "lint:fix": "pnpm -r --parallel lint:fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "test:watch": "pnpm -r test:watch",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "agent",
    "cli",
    "natural-language",
    "openai",
    "truffle-ai"
  ],
  "author": "truffle-ai",
  "license": "Elastic-2.0",
  "dependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.36",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}