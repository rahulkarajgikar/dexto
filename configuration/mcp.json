{
    "mcpServers": {
        "filesystem": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        },
        "puppeteer": {
            "type": "stdio",
            "command": "node",
            "args": [
                "--loader",
                "ts-node/esm",
                "src/servers/puppeteerServer.ts"
            ]
        },
        "github": {
            "type": "sse",
            "url": "https://mcp.composio.dev/github/repulsive-itchy-alarm-JdUKPY"
        }
    },
    "llm": {
        "provider": "openai",
        "model": "gpt-4o-mini",
        "apiKey": "env:OPENAI_API_KEY"
    }
}