{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@server/*": [
        "src/*"
      ],
      "@dexto/core": [
        "../core/src/index.ts"
      ],
      "@dexto/core/*": [
        "../core/src/*"
      ],
      "@core/*": [
        "../core/src/*"
      ],
      "@core": [
        "../core/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
