{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",       // Output directory for compiled JS
    "rootDir": "./src",      // Root directory of source files
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "moduleResolution": "NodeNext", // Change from "node" to "NodeNext"
    "esModuleInterop": true,    // Allows default imports from commonjs modules
    "skipLibCheck": true,       // Optional: Speeds up compilation slightly
    "forceConsistentCasingInFileNames": true,
    "declaration": true,           // Add declaration generation
    "declarationMap": true,         // Add declaration map generation
    "sourceMap": true               // Add source map generation
  },
  "include": ["src/server/**/*.ts"], // Only compile server-side TS initially
  "exclude": ["node_modules", "dist", "src/client"],
  "references": [
    { "path": "../core" },       // Reference the core package
    { "path": "../logger" }      // Reference the logger package
  ]
} 