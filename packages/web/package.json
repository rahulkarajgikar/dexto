{
  "name": "@saiki/web",
  "version": "0.1.0",
  "private": true,
  "description": "Web UI and Server for Saiki",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc && npm run copy-client-assets",
    "clean": "rm -rf dist public",
    "dev": "tsc --watch",
    "copy-client-assets": "copyfiles -u 1 src/client/* public/",
    "start": "node dist/server/index.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@saiki/core": "workspace:*",
    "@saiki/logger": "workspace:*",
    "express": "^4.19.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.11",
    "@types/node": "^20.14.10",
    "copyfiles": "^2.4.1",
    "eslint": "^9.7.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
} 