{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "../../dist/src/app",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "paths": {
      "@app/*": ["src/*"],
      "@core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/webui/.next/**", "**/*.test.ts", "**/*.spec.ts"]
}
